<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="samiamharris.rottenflix">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="samiamharris.rottenflix.MovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="samiamharris.rottenflix.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="samiamharris.rottenflix.activity.SearchActivity">
        </activity>

        <activity android:name="samiamharris.rottenflix.activity.MovieDetailActivity">
        </activity>

        <activity android:name="samiamharris.rottenflix.activity.ReviewActivity">
        </activity>

        <activity android:name="samiamharris.rottenflix.activity.SimilarMovieActivity">
        </activity>
    </application>

</manifest>