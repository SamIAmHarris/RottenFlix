<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/row_box_office_titleTextView"
        android:layout_toRightOf="@+id/row_box_office_thumbnailImageView"
        tools:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/row_box_office_yearTextView"
        tools:text="Year"
        android:layout_toRightOf="@+id/row_box_office_thumbnailImageView"
        android:layout_below="@+id/row_box_office_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/row_box_office_criticsScoreTextView"
        android:layout_toRightOf="@+id/row_box_office_titleTextView"
        tools:text="82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/row_box_office_audienceScoreTextView"
        android:layout_toRightOf="@+id/row_box_office_titleTextView"
        android:layout_below="@+id/row_box_office_criticsScoreTextView"
        tools:text="69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/row_box_office_thumbnailImageView"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>